<UI xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="PathToExaltedFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true" inherits="UIPanelTemplate">
        <Size x="700" y="500"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="8" y="-72"/>
                    <Anchor point="BOTTOMRIGHT" x="-30" y="4"/>
                </Anchors>
                <ScrollChild>
                    <Frame name="$parentScrollChild">
                        <Size x="640" y="420"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad>
                PathToExaltedFrameTitleText:SetText("Path to Exalted");
            </OnLoad>
            <OnShow>
                PathToExalted:OnShow();
            </OnShow>
            <OnHide>
                PathToExalted:OnHide();
            </OnHide>
        </Scripts>
    </Frame>
</UI>
